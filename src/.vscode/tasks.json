{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "Build CNN",
            "command": "g++",
            "args": [
                "-Wall",
                "-Wextra",
                "-g3",
                "${workspaceFolder}/main.cpp",
                "${workspaceFolder}/CNN.cpp",
                "${workspaceFolder}/Volumes.cpp",
                "${workspaceFolder}/Filters.cpp",
                "${workspaceFolder}/Datasets.cpp",
                "${workspaceFolder}/MLP.cpp",
                "-o",
                "${workspaceFolder}/output/main.exe"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}